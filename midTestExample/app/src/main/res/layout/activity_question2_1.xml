<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Question2_textView1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="1" />

    <Button
        android:id="@+id/Question2_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question2_textView1"
        android:layout_toLeftOf="@+id/Question2_textView1"
        android:text="-"
        android:clickable="true"
        android:onClick="onMyButtonClick"/>

    <Button
        android:id="@+id/Question2_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question2_textView1"
        android:layout_toRightOf="@+id/Question2_textView1"
        android:text="+"
        android:clickable="true"
        android:onClick="onMyButtonClick"/>

    <Button
        android:id="@+id/Question2_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question2_button1"
        android:layout_toRightOf="@+id/Question2_button1"
        android:layout_toLeftOf="@+id/Question2_button2"
        android:layout_centerHorizontal="true"
        android:text="SEND"
        android:clickable="true"
        android:onClick="onMyButtonClick"/>

    <TextView
        android:id="@+id/Question2_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question2_button3"
        android:layout_centerHorizontal="true"
        android:text="입력받는공간" />
</RelativeLayout>